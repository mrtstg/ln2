# limit for user deployment amount (used on main-site service)
USER_DEPLOYMENT_LIMIT=1

# token for services messaging
SERVICE_ACCESS_TOKEN=<generated by auth service>

# secret for generating JWT
AUTH_JWT_SECRET=<your string>

# proxmox deploy api
PROXMOX_INTERNET_NETWORK_CIDR=10.10.0.0/16
PROXMOX_INTERNET_NETWORK_GATEWAY=10.10.0.1
PROXMOX_INTERNET_NETWORK_DHCP_BEGIN=10.10.0.2
PROXMOX_INTERNET_NETWORK_DHCP_END=10.10.255.254

PROXMOX_DEPLOY_SDN_ZONE=sdn
PROXMOX_NODE_NAME=proxmox
PROXMOX_VERIFY_SSL=0
PROXMOX_URL=https://<ip>:8006/api2/json
PROXMOX_API_TOKEN_SECRET=
PROXMOX_API_TOKEN_ID=
# token for auth in proxmox agent
PROXMOX_AGENT_ACCESS_TOKEN=token
PROXMOX_AGENT_URL=http://<ip>:8000
# proxmox ip for nginx configuration
PROXMOX_IP=<ip>
# Common flag for enabling dev mode
DEV=1

# Turn on debug for services
AGENT_DEBUG=0
AGENT_THREADS=4

# Adds "admin" token
BYPASS_AUTH=1 

# Settings for postgreSQL container
POSTGRES_USER=dbuser
POSTGRES_PASSWORD=dbpass
POSTGRES_DB=ln2

# Additional DB settings for apps
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379

# Docker master server opts
DOCKER_MASTER_CPATH=./stands

# RabbitMQ
RABBITMQ_DEFAULT_USER=user
RABBITMQ_DEFAULT_PASS=rbpass
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672

# Endpoints URL
DOCKER_SOCKET_URL=unix:///run/docker.sock
DOCKER_MASTER_URL=http://localhost:8001
AUTH_SERVICE_URL=http://localhost:8002
MD_SERVICE_URL=http://localhost:8004
DB_API_URL=http://localhost:8005
